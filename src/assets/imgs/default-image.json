    // Color of text inside the tab. (RGB value, a valid color name or hexadecimal color)
    "tab_text_color": "#969696",
    // Url of font used in the text inside the tab. (string)
    "tab_font": "fonts/consolas-italic.ttf",
    // Size of font used in the text inside the tab. (int)26
