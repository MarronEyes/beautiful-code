    "bg_color": "#1E1E1E",

    // Height of bar. (int)
    "bar_h": 40,
    // Color of bar. (RGB value, a valid color name or hexadecimal color)
    "bar_color": "#252526",

    // Name of tab. (string)
    "tab_name": "main.py",
    // Color of tab. (RGB value, a valid color name or hexadecimal color) #1E1E1E
